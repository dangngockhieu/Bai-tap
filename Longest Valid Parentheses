#include<bits/stdc++.h>
using namespace std;
int longestValidParentheses(string s) {
        stack<int> st;
        st.push(-1);
        int maxLen = 0;

        for (int i = 0; i < s.length(); i++) {
            if (s[i] == '(') {
                st.push(i);
            } else {
                st.pop();

                if (st.empty()) {
                    st.push(i);// thêm vào để vòng lặp sau nếu rỗng mà vẫn có thêm ')' mà ko bị lỗi mà lúc đó len=0  
                } else {
                    int len = i - st.top();
                    maxLen = max(maxLen, len);
                }
            }
        }

        return maxLen;
    }
int main(){
string s;
getline(cin,s);
cout<<longestValidParentheses;
return 0;
}
